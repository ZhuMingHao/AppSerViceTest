<Page
    x:Class="AppServiceTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppServiceTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    >

    <StackPanel Orientation="Vertical">
        <Button Click="btnClick_ReadKey" Content="Click" HorizontalAlignment="Center" />
        <TextBlock Name="StatusBlock" Foreground="Green" HorizontalAlignment="Center"/>
        <TextBlock Name="InfoBlock" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
